<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Improve">

    <Button
        android:id="@+id/button_buy_1_lvl_auto"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="+1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_cost_buy_1_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/Close_shop" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="124dp"
        android:text="Стоимость:"
        app:layout_constraintStart_toEndOf="@+id/TextView_count_buy_1_lvl_auto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_count_buy_1_lvl_auto"
        android:layout_width="43dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="140dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/button_buy_1_lvl_auto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Close_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>